<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="simon.unicauca.edu.co.planpop.Fragments.VerPlanFragment"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/plan_nombre"
        style="@style/TextAppearance.AppCompat.Display2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:textColor="@color/blanco"
        />
    <TextView
        android:id="@+id/plan_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/padding_medium"
        android:padding="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:textColor="@color/blanco"
        android:text="Descripción, del plan aqui debe haber una pequeña descripcion "
        />
    <TextView
        android:id="@+id/plan_creador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creador"
        android:textSize="@dimen/padding_medium"
        android:padding="@dimen/padding_medium"
        android:textColor="@color/blanco"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/plan_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="@dimen/padding_medium"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/blanco"

            />
        <TextView
            android:id="@+id/plan_Hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textSize="@dimen/padding_medium"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/blanco"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textColor="@color/blanco"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estado"
            android:textColor="@color/blanco"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/plan_numero_participantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistentes"
            android:textSize="@dimen/padding_medium"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/blanco"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_ver_participantes"
            android:background="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ver"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/blanco"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_ver_lugar"
            android:background="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ver mapa"
            android:textColor="@color/blanco"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_asistir"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistir"
            android:layout_weight="1"

            android:visibility="invisible"
            />
    </LinearLayout>

</LinearLayout>
